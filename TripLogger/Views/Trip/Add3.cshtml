@model TripPage3ViewModel

@{
    ViewBag.Title = "Add Trip - Page 3";
    ViewBag.SubHeader = "Add Things to Do";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="ThingToDo1">Thing to Do 1</label>
        <input asp-for="ThingToDo1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ThingToDo2">Thing to Do 2</label>
        <input asp-for="ThingToDo2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ThingToDo3">Thing to Do 3</label>
        <input asp-for="ThingToDo3" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-dark">Submit</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>
