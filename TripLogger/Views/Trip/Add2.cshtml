@model TripPage2ViewModel

@{
    ViewBag.Title = "Add Trip - Page 2";
    ViewBag.SubHeader = "Add Accommodation Contact Info";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="AccommodationEmail">Accommodation Email</label>
        <input type="email" asp-for="AccommodationEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AccommodationPhoneNumber">Accommodation Phone Number</label>
        <input type="tel" asp-for="AccommodationPhoneNumber" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-dark">Next</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>
