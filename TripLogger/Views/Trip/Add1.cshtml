@model TripPage1ViewModel

@{
    ViewBag.Title = "Add Trip - Page 1";
    ViewBag.SubHeader = "Add Trip Destination and Dates";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input type="text" asp-for="Destination" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Accommodation">Accommodations (Optional)</label>
        <input type="text" asp-for="Accommodation" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input type="date" asp-for="EndDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
    </div>
    <div>
        <button type="submit" class="btn btn-dark">Next</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>
