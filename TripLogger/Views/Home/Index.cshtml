@model IEnumerable<TripViewModel>

@{
    ViewBag.Title = "My Trip Log";
}

<a asp-action="Add1" asp-controller="Trip" class="mt-2"><b>Add Trip</b></a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things To Do</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@trip.EndDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (!string.IsNullOrEmpty(trip.Accommodation))
                    {
                        <div>@trip.Accommodation</div>
                        @if (!string.IsNullOrEmpty(trip.AccommodationEmail))
                        {
                            <div>Email: @trip.AccommodationEmail</div>
                        }
                        @if (!string.IsNullOrEmpty(trip.AccommodationPhoneNumber))
                        {
                            <div>Phone: @trip.AccommodationPhoneNumber</div>
                        }
                    }
                </td>
                <td>
                    @foreach (var thing in trip.ThingsToDo.Split('\n'))
                    {
                        <div>@thing</div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
